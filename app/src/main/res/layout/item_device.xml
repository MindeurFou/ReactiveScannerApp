<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bluetooth_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_bluetooth_24"
        android:contentDescription="bluetooth icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/device_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/device_name_string"
        app:layout_constraintStart_toEndOf="@+id/bluetooth_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/device_adress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/device_adress_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/device_name_title"
        app:layout_constraintTop_toBottomOf="@+id/device_name_title"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/device_name_title"
        app:layout_constraintTop_toTopOf="@+id/device_name_title"
        tools:text="Téléphone de Tanguy" />

    <TextView
        android:id="@+id/device_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/device_adress_title"
        app:layout_constraintTop_toTopOf="@+id/device_adress_title"
        tools:text="20.301.156.556" />

</androidx.constraintlayout.widget.ConstraintLayout>